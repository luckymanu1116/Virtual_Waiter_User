<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview1"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_margin="8dp"
    android:background="@drawable/rounded_top_card"
    android:layout_gravity="center_horizontal"
    android:outlineSpotShadowColor="@color/White"
    card_view:contentPadding="5dp"
    card_view:cardCornerRadius="24dp"
    card_view:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="429dp"
        android:layout_height="139dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/StudentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Item Name: "
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/ItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/StudentName"
            android:layout_toRightOf="@+id/StudentName"
            android:gravity="center"
            android:text="Show Item Name"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/StudentNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/StudentName"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="Item Cost: "
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/ItemCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ItemName"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/StudentNumber"
            android:layout_toRightOf="@+id/StudentNumber"
            android:gravity="center"
            android:text="Show Cost"
            android:textColor="#000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/Ordernow"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="173dp"
            android:background="@drawable/brn_red_rect"
            android:layout_marginBottom="631dp"
            android:text="Order Now"></Button>

    </RelativeLayout>

</androidx.cardview.widget.CardView>